<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llchild"
    style="@style/appFieldLinearLayout">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvChild"
            style="@style/appFieldTitleText"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/tvAsteric" />

        <TextView
            android:id="@+id/tvAsteric"
            style="@style/appFieldAstericText" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tvChildDesc"
        style="@style/appFieldDescText" />

    <EditText
        android:id="@+id/edtChild"
        style="@style/app_edt"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:hint="" />

</LinearLayout>
