<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/margin_min"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/llViews"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:orientation="vertical">

                <View
                    android:id="@+id/view1"
                    android:layout_width="2dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="18dp"
                    android:visibility="visible"
                    android:layout_above="@+id/textDot"
                    android:layout_marginRight="18dp"
                    android:background="@color/app_theme_color" />
                <TextView
                    android:id="@+id/textDot"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/green_circle" />


                <View
                    android:id="@+id/view2"
                    android:layout_width="2dp"
                    android:visibility="visible"
                    android:layout_marginRight="18dp"
                    android:layout_below="@+id/textDot"
                    android:layout_height="45dp"
                    android:layout_marginLeft="18dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/app_theme_color" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imgCustomer"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:background="@drawable/ic_customer" />


            <LinearLayout
                android:id="@+id/llMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewRetailersName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_medium"
                    android:layout_toRightOf="@+id/imgCustomer"
                    android:text="@string/retailersname"
                    android:textColor="@color/textColorPrimaryDark"
                    android:textSize="@dimen/text_size_small" />



                <TextView
                    android:id="@+id/textViewMobileNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_min"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_toRightOf="@+id/imgCustomer"
                    android:text="@string/mobile_no"
                    android:textColor="@color/textColorPrimaryDark"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>