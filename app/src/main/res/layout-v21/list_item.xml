<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/include"
        layout="@layout/crystal_doctor_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:background="@drawable/rectangular_shape">

        <LinearLayout
            android:id="@+id/linearLayoutTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/totalNumber"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_small" />

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/divider_color" />

            <TextView
                android:id="@+id/itemno"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_small" />

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/divider_color" />

            <TextView
                android:id="@+id/itempercentage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/totalNumber"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linearLayoutTeam"
            android:background="@color/divider_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutTeam"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textViewteamInprogress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/totalNumber"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_small" />

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/divider_color" />

            <TextView
                android:id="@+id/textViewNewReatilors"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_small" />

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/divider_color" />

            <TextView
                android:id="@+id/textViewCrystalMembers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/totalNumber"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
